<div class="single-post-wrapper"> 
    <section>
        {{> post-info post}}   
    </section>

    <section class="comment-wrapper">
        <div class="add-comment">
            <h2>Add Comment</h2>
            <textarea id='post-comment' rows='10' cols="30"></textarea>
            {{#if loggedIn}}
                <button type="button" id="comment-btn">post comment</button>
            {{else}}
                <p>Log in to add a comment</p>
            {{/if}}
        </div>

        <div class="comment-section">
            <h2>Post Comments</h2>
            <ul class="comment-list">
                {{#each post.comments}}
                    <li class='comment-list-items'>
                        <div class="comment-title">
                            {{user.username}} {{formatDate createdAt}}
                        </div>
                        <div class="comment-text">
                            {{comment_text}}
                        </div>
                    </li>     
                {{/each}}
            </ul>
        </div>
    </section>
</div>
{{#if loggedIn}}
    <script src="/javascript/add-comment.js"></script>
{{/if}}